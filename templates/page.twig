{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				
				<div class="article-body m-2">
					{{post.content}}
				</div>
				<div class ="card-footer">{{"Written on: "}}{{ post.date }}</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
